#!/usr/bin/env bash


if [ -z "$@" ]; then
    echo -en "Shutdown\0icon\x1fxfsm-shutdown\n"
    echo -en "Logout\0icon\x1fxfsm-logout\n"
    echo -en "Suspend\0icon\x1fhibernate\n"
    echo -en "Reboot\0icon\x1fxfsm-reboot\n"
else
    if [ "$1" = "Shutdown" ]; then
        poweroff
    elif [ "$1" = "Logout" ]; then
        i3-msg exit
    elif [ "$1" = "Reboot" ]; then
        reboot
    elif [ "$1" = "Hibernate" ]; then
        systemctl hibernate
    fi
fi
